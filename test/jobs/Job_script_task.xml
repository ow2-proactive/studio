<?xml version="1.0" encoding="UTF-8"?>
<job xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="urn:proactive:jobdescriptor:3.3"
	 xsi:schemaLocation="urn:proactive:jobdescriptor:3.3 http://www.activeeon.com/public_content/schemas/proactive/jobdescriptor/3.3/schedulerjob.xsd"
     cancelJobOnError="false" name="ScriptTask" priority="normal">
	<taskFlow>
		<!--Used for TestXMLTransformer and TestScriptTask -->
		<task name="simple">
			<scriptExecutable>
				<script>
					<code language="javascript">  <![CDATA[
						print('hello')
					]]>  </code>
				</script>
			</scriptExecutable>
		</task>
		<task name="return">
			<scriptExecutable>
				<script>
					<code language="javascript">  <![CDATA[
						result = '42'
					]]> </code>
				</script>
			</scriptExecutable>
		</task>
		<task name="results_from_dependent_task">
			<depends>
				<task ref="return"/>
			</depends>
			<scriptExecutable>
				<script>
					<code language="javascript">  <![CDATA[
						result = results[0]
					]]> </code>
				</script>
			</scriptExecutable>
		</task>
		<task name="properties">
			<scriptExecutable>
				<script>
					<code language="javascript">  <![CDATA[
						print('pas.job.id=' + java.lang.System.getProperty("pas.job.id"));
						print('pas.job.name=' + java.lang.System.getProperty("pas.job.name"));
						print('pas.task.id=' + java.lang.System.getProperty("pas.task.id"));
						print('pas.task.name=' + java.lang.System.getProperty("pas.task.name"));
						print('pas.task.iteration=' + java.lang.System.getProperty("pas.task.iteration"));
						print('pas.task.replication=' + java.lang.System.getProperty("pas.task.replication"));
					]]> </code>
				</script>
			</scriptExecutable>
		</task>
		<task name="dataspaces">
			<scriptExecutable>
				<script>
					<code language="javascript">
						<![CDATA[
						print('user=' + user.getVirtualURI())
						print('global=' + global.getVirtualURI())
						print('input=' + input.getVirtualURI())
						print('output=' + output.getVirtualURI())
						print('localspace=' + localspace.getVirtualURI())
						]]>
					</code>
				</script>
			</scriptExecutable>
		</task>
		<!-- Should probably be the last one to run -->
		<task name="killJVM">
			<depends>
				<task ref="simple"/>
				<task ref="return"/>
				<task ref="results_from_dependent_task"/>
				<task ref="properties"/>
				<task ref="dataspaces"/>
			</depends>
			<scriptExecutable>
				<script>
					<code language="javascript"> <![CDATA[
						java.lang.System.exit(0);
                        ]]> </code>
				</script>
			</scriptExecutable>
		</task>
	</taskFlow>
</job>