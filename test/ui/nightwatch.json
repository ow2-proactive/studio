{
  "src_folders": [
    "test/ui/specs"
  ],
  "output_folder": "test/ui/reports",
  "custom_commands_path": "test/ui/commands",
  "custom_assertions_path": "test/ui/assertions",
  "globals_path": "",
  "selenium": {
    "start_process": false,
    "log_path": "",
    "host": "127.0.0.1",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "",
      "webdriver.ie.driver": ""
    }
  },
  "test_settings": {
    "default": {
      "launch_url": "http://localhost",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "screenshots": {
        "enabled": true,
        "on_failure" : true,
        "on_error" : true,
        "path": "test/ui/screenshots"
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      },
      "globals": {
        "studio_url": "http://localhost:8080/studio",
        "waitForConditionTimeout": 5000,
        "numberOfTries": 50,
        "menuAnimationTime": 2000,
        "waitForConditionPollInterval": 100
      }
    },
    "trydev": {
      "globals": {
        "studio_url": "http://trydev.activeeon.com/studio",
        "waitForConditionTimeout": 30000,
        "numberOfTries": 50,
        "menuAnimationTime": 2000,
        "waitForConditionPollInterval": 500
      }
    },
    "jenkins-chrome": {
      "globals": {
        "waitForConditionTimeout": 30000,
        "numberOfTries": 50,
        "menuAnimationTime": 2000,
        "waitForConditionPollInterval": 500
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },
    "jenkins-phantomjs": {
      "globals": {
        "waitForConditionTimeout": 5000,
        "numberOfTries": 50,
        "menuAnimationTime": 2000,
        "waitForConditionPollInterval": 500
      },
      "desiredCapabilities": {
        "browserName": "phantomjs",
        "javascriptEnabled": true,
        "phantomjs.binary.path": "node_modules/phantomjs-prebuilt/bin/phantomjs",
        "phantomjs.cli.args": [
          "--webdriver=5558",
          "--ignore-ssl-errors=true",
          "--web-security=false",
          "--disk-cache=false"
        ]
      }
    }
  }
}
