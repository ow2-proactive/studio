<?xml version="1.0" encoding="UTF-8"?>
<job xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="urn:proactive:jobdescriptor:3.13"
	xsi:schemaLocation="urn:proactive:jobdescriptor:3.13 http://www.activeeon.com/public_content/schemas/proactive/jobdescriptor/3.13/schedulerjob.xsd"
	name="script_dockerfile" projectName="" priority="normal" onTaskError="continueJobExecution">
	<description>
		<![CDATA[ A workflow that executes a Docker build to create an image.]]>
	</description>
	<taskFlow>
		<task name="Dockerfile_Task">
			<description>
				<![CDATA[ Simple task running creating an image with Docker build.]]>
			</description>
			<scriptExecutable>
				<script>
					<code language="dockerfile">
                        <![CDATA[
FROM ubuntu:18.04
RUN echo "Hello"
]]>
					</code>
				</script>
			</scriptExecutable>
		</task>
	</taskFlow>
</job>
