<?xml version="1.0" encoding="UTF-8"?>
<job xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xmlns="urn:proactive:jobdescriptor:3.3"
     xsi:schemaLocation="urn:proactive:jobdescriptor:3.3 http://www.activeeon.com/public_content/schemas/proactive/jobdescriptor/3.3/schedulerjob.xsd"
     name="script_bash" projectName="" priority="normal" cancelJobOnError="false">
    <description>
        A workflow that executes bash in JVM.
    </description>
    <taskFlow>
        <task name="Linux_Bash_Task">
            <description>
                The simplest task, ran by a bash engine.
            </description>
            <scriptExecutable>
                <script>
                    <code language="bash">
                        <![CDATA[
ls -la
]]>
                    </code>
                </script>
            </scriptExecutable>
        </task>
    </taskFlow>
</job>