<?xml version="1.0" encoding="UTF-8"?>
<job xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="urn:proactive:jobdescriptor:3.10"
	xsi:schemaLocation="urn:proactive:jobdescriptor:3.10 http://www.activeeon.com/public_content/schemas/proactive/jobdescriptor/3.10/schedulerjob.xsd"
	name="script_powershell" projectName="" priority="normal" onTaskError="continueJobExecution">
	<description>
		A workflow that executes a PowerShell Script in the JVM.
	</description>
	<taskFlow>
		<task name="PowerShell_Task">
			<description>
				The simplest task, ran by a PowerShell engine.
			</description>
			<scriptExecutable>
				<script>
					<code language="powershell">
                        <![CDATA[
Write-Output "Hello World"
$result = $True
]]>
					</code>
				</script>
			</scriptExecutable>
		</task>
	</taskFlow>
</job>